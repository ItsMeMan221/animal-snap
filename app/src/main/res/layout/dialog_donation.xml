<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingHorizontal="16dp"
    android:paddingVertical="32dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/donate_motto"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/donate_text"
        android:textSize="14sp"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:textAlignment="center"/>
    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginVertical="20dp"
        android:src="@drawable/donate_icon"
        app:tint="@color/green"
        android:contentDescription="@string/donate" />
    <TextView
        android:id="@+id/tv_donate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/donate_organizations"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textAlignment="center" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_organization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:background="@drawable/shape_button_gradient"
            android:textColor="@color/black"
            android:textSize="12sp"/>
        <RelativeLayout
            android:id="@+id/iv_left"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:visibility="gone">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="@string/previous"
                android:src="@drawable/ic_baseline_arrow_left_72" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/previous"
                android:src="@drawable/ic_baseline_arrow_left_48" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/iv_right"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:visibility="gone">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="@string/next"
                android:src="@drawable/ic_baseline_arrow_right_72" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/next"
                android:src="@drawable/ic_baseline_arrow_right_48" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>